'use strict';

module.exports = function(grunt) {

    // require('matchdep').filterDev('grunt-*').forEach(grunt.loadNpmTasks);
    require('load-grunt-tasks')(grunt, {scope: 'devDependencies'});
    require('time-grunt')(grunt);

    grunt.initConfig({

        //清除目录
        clean: {
            image: 'dist/themes/images/**/*',
            css: 'dist/themes/css/**/*',
            html: 'dist/templates/**/*'
            iconfont: 'dist/themes/fonts/**/*'
        },

        copy: {
            html: {
                files: [
                    { expand: true, cwd: 'src/templates/', src: ['*.html'], dest: 'dist/templates/' }
                ]
            },
            image: {
                files: [
                    { expand: true, cwd: 'src/themes/images/', src: ['*.{png,jpg,jpeg,gif}'], dest: 'dist/themes/images/' }
                ]
            },
            iconfont: {
                files: [
                    { expand: true, cwd: 'src/themes/fonts/', src: ['*.{eot,svg,ttf,woff}'], dest: 'dist/themes/fonts/' }
                ]
            }
        },
        //压缩CSS
        cssmin: {
            prod: {
                options: {
                    report: 'gzip'
                },
                files: [{
                    expand: true,
                    cwd: 'dist/themes/css/',
                    src: ['*.css'],
                    dest: 'dist/themes/css/'
                }]
            }
        },

        //添加厂商前缀
        /*autoprefixer: {
        },*/

        //压缩图片
        imagemin: {
            prod: {
                options: {
                    optimizationLevel: 7,
                    pngquant: true
                },
                files: [
                    { expand: true, cwd: 'dist/themes/images/', src: ['*.{png,jpg,jpeg,gif,webp,svg}'], dest: 'dist/themes/images/' }
                ]
            }
        },

        //添加MD5
        filerev: {
            options: {
                encoding: 'utf8',
                algorithm: 'md5',
                length: 8
            },
            assets: {
                files: [{
                    src: [
                        'dist/**/*',
                        'dist/templates/*.html'
                    ]
                }]
            }
        },

        // 处理html中css、js 引入合并问题
        usemin: {
            html: ['dist/templates/*.html'],
            css: ['dist/themes/css/{,*/}*.css']
        }
    });


    grunt.registerTask('build', [
        'clean',
        'copy',
        'cssmin',
        'imagemin',
        'rev',
        'usemin'
    ]);

};