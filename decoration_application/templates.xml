<?xml version="1.0"?>
	<block name='图片轮播' template='templates/slider.html' iconfont='&#x33;' as='slider'>
        <action method="addCss"><stylesheet>libs/css/swiper.min.css</stylesheet></action>
		<action method="addJs"><script>libs/js/swiper.min.js</script></action>
        <action method="addJs"><script>libs/js/swiper_config.js</script></action>
		<edit>
			<content_edit>
				<image_address>
					<name>图片地址</name>
					<input></input>
				</image_address>
				<link_address>
					<name>链接地址</name>
					<input></input>
				</link_address>
				<operate>
					<name>操作</name>
				</operate>
			</content_edit>
			<view_edit>
				<visible_title>
					<name>显示标题</name>
					<radio>不显示</radio>
					<radio switch='true'>显示</radio>
					<input>图片轮播</input>
				</visible_title>
				<module_height>
					<input>
						<value>250</value>
						<label>px&nbsp;请设置在100-600px之间</label>
					</input>
				</module_height>
			</view_edit>
		</edit>
	</block>
